body
    background-color #29282C
#first-page
    height 1000px
    display table
    margin 0 auto
    .inner-content
        display table-cell
        vertical-align middle
        #heading
            color white
            font-size 72px
            font-weight 400
            text-align center
            margin-bottom 10px
            margin-top 0
            display none
        .scroll-label
            text-align center
            display block
            margin 0 auto
            position absolute
            left 49.5%
            bottom 40px
            color white
            font-size 40px
            animation-duration 4s
            animation-delay 1s
        p
            color #69676A
            font-size 16px
            text-align center
            display none
