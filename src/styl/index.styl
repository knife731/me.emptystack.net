body
    background-color #29282C
.intro-wrap
    display block
    h1
        color white
        font-size 60px
        font-weight 200
        text-align center
    .heading
        margin-bottom 10px
        margin-top 0
        display none
    .content
        p
            color #69676A
            font-size 30px
            text-align center
            span
                padding 0 3px
            a
                &:hover
                &:focus
                    text-decoration: none
    .scroll-label
        text-align center
        display none
        margin 0 auto
        position absolute
        left 49.5%
        bottom 40px
        color white
        font-size 40px
        cursor pointer
#first-page
    height 2000px
    display table
    margin 0 auto
#second-page
    display table
    margin 0 auto
#third-page
    display table
    margin 0 auto
    margin-top 100px
#fourth-page
    display table
    margin 0 auto
    margin-top 100px
.experience-wrap
    width 980px
    margin 0 auto
    position relative
#experienceTimeLine
    width 800px
    height 900px
    margin 0 auto
    position relative
.legend
    float left
    width 150px
    margin-top 140px
    h3
        text-align right

.skillsList
    padding 0
    list-style none
    li
        display block
        float right
        clear both
        padding 0 15px
        height 35px
        line-height 35px
        color #fff
        margin-bottom 1px
        font-size 18px
        cursor pointer
        &:hover
            background black

#skillChart
    float left
    width 830px
    height 500px

.projectTable
    font-size 40px
    margin 20px
    color #eee
    strong
        color #285AA9
        font-weight normal
        font-size 1.2em
        padding 0 5px
    .projectTd
        font-size 0.7em
        padding-left 50px
